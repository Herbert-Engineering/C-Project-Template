# https://clang.llvm.org/extra/clang-tidy/

Checks: >
  clang-analyzer-*,
  bugprone-*,
  performance-*,
  readability-*,
  portability-*,
  cppcoreguidelines-*,
  modernize-*,
  misc-*,
  -modernize-use-trailing-return-type,
  -cppcoreguidelines-owning-memory

WarningsAsErrors: '*'
HeaderFilterRegex: '.*'
FormatStyle: file
CheckOptions:
  - key:             readability-identifier-naming.VariableCase
    value:           lower_case
  - key:             readability-identifier-naming.FunctionCase
    value:           lower_case